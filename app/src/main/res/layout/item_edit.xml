<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imgHandle"
            android:id="@+id/btnDelete"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:background="#00000000"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnDelete"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:id="@+id/imgHandle"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/edtName"
            android:id="@+id/imgIcon"
            android:layout_gravity="center"
            android:src="@drawable/hw1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgIcon"
            app:layout_constraintRight_toLeftOf="@id/btnDelete"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/edtName"
            android:textSize="14dp"
            android:textColor="@color/main_font"
            android:hint="0~99"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dp"
            android:maxLength="30"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_style"
            android:padding="10dp"
            android:textColorHint="@color/disabled_font"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/edtNow"
            android:textSize="14dp"
            android:textColor="@color/main_font"
            android:hint="0~99"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:maxLength="2"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_style"
            android:padding="5dp"
            android:textColorHint="@color/disabled_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/edtNow"
            app:layout_constraintRight_toLeftOf="@id/edtMax"
            app:layout_constraintTop_toTopOf="@id/edtNow"
            app:layout_constraintBottom_toBottomOf="@id/edtNow"
            android:id="@+id/txtSlide"
            android:text="/"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_font"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtName"
            app:layout_constraintLeft_toRightOf="@id/txtSlide"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/edtMax"
            android:textSize="14dp"
            android:textColor="@color/main_font"
            android:hint="1~99"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:maxLength="2"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_style"
            android:padding="5dp"
            android:textColorHint="@color/disabled_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/sprEnd"
            app:layout_constraintBottom_toBottomOf="@id/sprEnd"
            android:text="단위 : "
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
        <Spinner
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/edtName"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="@id/edtName"
            android:spinnerMode="dropdown"
            android:background="@drawable/background_spinner"
            android:popupBackground="@color/background"
            android:layout_gravity="center"
            android:id="@+id/sprEnd"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>