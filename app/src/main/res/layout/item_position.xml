<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/imgJob"
            android:src="@drawable/jbi1"
            android:layout_gravity="center"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgJob"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtServer"
                android:text="Server"
                android:textSize="12dp"
                android:textColor="@color/sub_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtServer"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtName"
                android:text="Chracter Name"
                android:textSize="16dp"
                android:textColor="@color/main_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtLevel"
                android:text="Lv.0"
                android:textSize="12dp"
                android:textColor="@color/sub_font"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toTopOf="@id/txtLevel"
                app:layout_constraintBottom_toBottomOf="@id/txtLevel"
                app:layout_constraintLeft_toRightOf="@id/txtLevel"
                android:id="@+id/imgDot"
                android:src="@drawable/ic_sub_point"
                android:padding="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                app:layout_constraintLeft_toRightOf="@id/imgDot"
                android:id="@+id/txtJob"
                android:text="Job"
                android:textSize="12dp"
                android:textColor="@color/sub_font"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:layout_gravity="center"
            android:id="@+id/imgHandle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>