<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/layoutBackground"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imgJob"
        android:src="@drawable/jbi1"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgJob"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/txtServer"
            android:text="Server"
            android:textSize="12dp"
            android:textColor="@color/sub_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtServer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/txtName"
            android:text="Chracter Name"
            android:textSize="16dp"
            android:textColor="@color/main_font"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/txtLevel"
            android:text="Lv.0"
            android:textSize="12dp"
            android:textColor="@color/sub_font"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="@id/txtLevel"
            app:layout_constraintLeft_toRightOf="@id/txtLevel"
            app:layout_constraintBottom_toBottomOf="@id/txtLevel"
            android:id="@+id/imgDot"
            android:src="@drawable/ic_sub_point"
            android:padding="4dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            app:layout_constraintLeft_toRightOf="@id/imgDot"
            android:id="@+id/txtJob"
            android:text="Job"
            android:textSize="12dp"
            android:textColor="@color/sub_font"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/chkCheck"
        android:checked="true"
        android:buttonTint="@color/checkbox"
        android:layout_gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>