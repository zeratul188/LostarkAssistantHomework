<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dialog"
            type="com.lostark.lostarkassistanthomework.checklist.edit.add.AddFamilyDialog" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#00000000"
            android:outlineProvider="none"
            app:menu="@menu/add_menu"
            app:itemIconTint="@drawable/bottom_navigation_select_text_style"
            app:itemTextColor="@drawable/bottom_navigation_select_text_style"
            android:id="@+id/bottomNavigationView"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomNavigationView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/layoutFrame"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layoutFrame"
            android:id="@+id/viewLine2"
            android:layout_marginTop="10dp"
            android:background="@color/press_background"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine2"
            app:layout_constraintRight_toLeftOf="@id/btnAdd"
            app:layout_constraintHorizontal_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_dialog_left_style"
            android:id="@+id/btnCancel"
            android:text="취소"
            android:textSize="14dp"
            android:textColor="@color/main_font"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine2"
            app:layout_constraintLeft_toRightOf="@id/btnCancel"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/btnAdd"
            android:background="@drawable/button_dialog_right_style"
            android:text="추가"
            android:textSize="14dp"
            android:textColor="@color/main_font"
            style="?android:attr/borderlessButtonStyle"/>
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/viewLine2"
            app:layout_constraintLeft_toRightOf="@id/btnCancel"
            app:layout_constraintRight_toLeftOf="@id/btnAdd"
            android:id="@+id/viewLine"
            android:background="@color/press_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>